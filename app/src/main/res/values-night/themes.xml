<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">#09111E</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@color/text_color_night</item>
        <item name="colorPrimaryDark">#003373</item>
        <item name="android:windowBackground">#09111E</item>
        <item name="android:textColorPrimary">#9CACBF</item>
        <item name="colorPrimaryVariant">#003373</item>
        <item name="colorOnPrimary">#9CACBF</item>
        <item name="colorAccent">#003373</item>
        <item name="colorPrimary">#004397</item>
        <item name="colorOnSurface">#9CACBF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#003373</item>
        <item name="colorSecondaryVariant">#09111E</item>
        <item name="colorOnSecondary">#9CACBF</item>
        <item name="android:textColorSecondary">#9CACBF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#003373</item>
    </style>

    <style name="AutoComplete">
        <item name="colorControlNormal">#003373</item>
        <item name="colorControlActivated">#003373</item>
        <item name="colorPrimary">#004397</item>
        <item name="colorOnSurface">#9CACBF</item>
    </style>

    <style name="HintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF626B77</item>
    </style>

    <style name="CheckBoxAndRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:buttonTint">#9CACBF</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">#9CACBF</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>