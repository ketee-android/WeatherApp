<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border">

    <TextView
        android:id="@+id/forecastTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="@string/weather_today_forecast"
        android:textColor="@color/second_text_color"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dayDegreesView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dayDegreesView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <View
        android:id="@+id/lineOne"
        android:layout_width="match_parent"
        android:background="@color/second_text_color"
        android:layout_height="1px"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/dayDegreesView"
        app:layout_constraintEnd_toEndOf="@+id/dayDegreesView"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/forecastTextView"
        app:layout_constraintTop_toTopOf="@+id/dayDegreesView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dayTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="@string/day_weather"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/dayDegreesView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dayDegreesView"
        app:layout_constraintTop_toTopOf="@+id/dayDegreesView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dayDegreesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:text="@string/default_day_temp"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecastTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/nightDegreesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:text="@string/default_night_temp"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/nightTempView"
        app:layout_constraintEnd_toStartOf="@+id/nightTempView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dayTempView"
        app:layout_constraintTop_toTopOf="@+id/nightTempView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/nightTempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="@string/night_weather"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/dayTempView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dayTempView"
        app:layout_constraintTop_toTopOf="@+id/dayTempView"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/weekWeatherButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTintMode="src_atop"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:onClick="onClickWeekWeather"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:paddingBottom="2dp"
        android:shadowColor="@color/fragment_color"
        android:stateListAnimator="@anim/alpha"
        android:text="@string/week_weather_button"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/button_highlight_color"
        android:textColorLink="@color/purple_200"
        android:textCursorDrawable="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayTempView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/weekWeatherUrlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_week_weather_url"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>