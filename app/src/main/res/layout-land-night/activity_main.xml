<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/appNameView"
      android:layout_width="307dp"
      android:layout_height="49dp"
      android:fontFamily="sans-serif-condensed-light"
      android:text="@string/app_name"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textColor="@color/text_color"
      android:textSize="36sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.05" />

  <TextView
      android:id="@+id/dayTempView"
      android:layout_width="wrap_content"
      android:layout_height="52dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/day_weather"
      android:textColor="@color/text_color"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/cityButton"
      app:layout_constraintHorizontal_bias="0.154"
      app:layout_constraintStart_toStartOf="@+id/cityButton"
      app:layout_constraintTop_toBottomOf="@+id/cityButton"
      app:layout_constraintVertical_bias="0.321" />

  <TextView
      android:id="@+id/nightTempView"
      android:layout_width="wrap_content"
      android:layout_height="52dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/night_weather"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/dayTempView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/nightDegreesView"
      app:layout_constraintTop_toBottomOf="@+id/dayTempView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/dayDegreesView"
      android:layout_width="wrap_content"
      android:layout_height="52dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:paddingEnd="10dp"
      android:text="@string/default_temp"
      android:textColor="@color/text_color"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/dayTempView"
      app:layout_constraintEnd_toStartOf="@+id/dayTempView"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/cityButton"
      app:layout_constraintTop_toTopOf="@+id/dayTempView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/nightDegreesView"
      android:layout_width="wrap_content"
      android:layout_height="52dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:paddingEnd="5dp"
      android:text="@string/default_temp"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/nightTempView"
      app:layout_constraintEnd_toStartOf="@+id/dayTempView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/dayDegreesView"
      app:layout_constraintTop_toTopOf="@+id/nightTempView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/atmospherePressureMainView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/pressure_view"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/dateButton"
      app:layout_constraintHorizontal_bias="0.165"
      app:layout_constraintStart_toStartOf="@+id/dateButton"
      app:layout_constraintTop_toTopOf="@+id/dayTempView"
      app:layout_constraintVertical_bias="0.059" />

  <TextView
      android:id="@+id/windSpeedMainView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/wind_speed_view"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/atmospherePressureMainView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/atmospherePressureMainView"
      app:layout_constraintTop_toBottomOf="@+id/atmospherePressureMainView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/humidityMainView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/humidity_view"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/windSpeedMainView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/windSpeedMainView"
      app:layout_constraintTop_toBottomOf="@+id/windSpeedMainView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/atmospherePressureInfoView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:text="@string/default_temp"
      android:textAlignment="center"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/atmospherePressureMainView"
      app:layout_constraintStart_toEndOf="@+id/atmospherePressureMainView"
      app:layout_constraintTop_toTopOf="@+id/atmospherePressureMainView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/windSpeedInfoView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:text="@string/default_temp"
      android:textAlignment="center"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/windSpeedMainView"
      app:layout_constraintStart_toEndOf="@+id/windSpeedMainView"
      app:layout_constraintTop_toTopOf="@+id/windSpeedMainView" />

  <TextView
      android:id="@+id/humidityInfoView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:text="@string/default_temp"
      android:textAlignment="center"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/humidityMainView"
      app:layout_constraintStart_toEndOf="@+id/humidityMainView"
      app:layout_constraintTop_toTopOf="@+id/humidityMainView" />

  <TextView
      android:id="@+id/atmospherePressureIndicatorView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/pressure_indicator"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/atmospherePressureInfoView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/atmospherePressureInfoView"
      app:layout_constraintTop_toTopOf="@+id/atmospherePressureInfoView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/windSpeedIndicatorView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/wind_speed_indicator"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/windSpeedInfoView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/windSpeedInfoView"
      app:layout_constraintTop_toTopOf="@+id/windSpeedInfoView"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/humidityIndicatorView"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:fontFamily="sans-serif-condensed-light"
      android:gravity="center"
      android:text="@string/humidity_indicator"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/humidityInfoView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/humidityInfoView"
      app:layout_constraintTop_toTopOf="@+id/humidityInfoView"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/dateButton"
      android:layout_width="266dp"
      android:layout_height="49dp"
      android:layout_marginEnd="24dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:text="@string/set_date_button"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/cityButton"
      app:layout_constraintTop_toBottomOf="@+id/appNameView"
      app:layout_constraintVertical_bias="0.065" />

  <Button
      android:id="@+id/cityButton"
      android:layout_width="266dp"
      android:layout_height="49dp"
      android:layout_marginLeft="24dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:onClick="onClickSetCity"
      android:text="@string/chose_city_screen_name"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@+id/dateButton"
      app:layout_constraintEnd_toEndOf="@+id/appNameView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/dateButton"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/settingsButton"
      android:layout_width="98dp"
      android:layout_height="33dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:onClick="onClickSettings"
      android:text="@string/settings_button"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="@+id/appNameView"
      app:layout_constraintEnd_toStartOf="@+id/appNameView"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/cityButton"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.47" />

  <!--  Кнопки-каунтеры для проверки onSaveInstanceState и onRestoreInstanceState.
  Потом их уберу. По этой причине не выношу текст в ресурсы -->
  <Button
      android:id="@+id/windSpeedCounterButton"
      android:layout_width="68dp"
      android:layout_height="44dp"
      android:layout_marginStart="8dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="+Вет"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/pressureCounterButton"
      app:layout_constraintStart_toEndOf="@+id/pressureCounterButton"
      app:layout_constraintTop_toTopOf="@+id/pressureCounterButton"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/humidityCounterButton"
      android:layout_width="68dp"
      android:layout_height="44dp"
      android:layout_marginStart="8dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="+Воз"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/windSpeedCounterButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/windSpeedCounterButton"
      app:layout_constraintTop_toTopOf="@+id/windSpeedCounterButton"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/pressureCounterButton"
      android:layout_width="68dp"
      android:layout_height="44dp"
      android:layout_marginStart="8dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="+Дав"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/nightTempCounterButton"
      app:layout_constraintStart_toEndOf="@+id/nightTempCounterButton"
      app:layout_constraintTop_toTopOf="@+id/nightTempCounterButton"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/nightTempCounterButton"
      android:layout_width="68dp"
      android:layout_height="44dp"
      android:layout_marginStart="8dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="+Нч"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/dayTempCounterButton"
      app:layout_constraintStart_toEndOf="@+id/dayTempCounterButton"
      app:layout_constraintTop_toTopOf="@+id/dayTempCounterButton"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/dayTempCounterButton"
      android:layout_width="68dp"
      android:layout_height="44dp"
      android:layout_marginStart="24dp"
      android:backgroundTint="@color/button_color"
      android:backgroundTintMode="src_atop"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="+Дн"
      android:textAllCaps="false"
      android:textColor="@color/text_color"
      android:textColorHighlight="@color/button_highlight_color"
      android:textColorLink="@color/purple_200"
      android:textCursorDrawable="@color/text_color"
      android:textSize="14sp"
      app:layout_constraintBottom_toTopOf="@+id/dayDegreesView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dateButton"
      app:layout_constraintVertical_bias="0.714" />
</androidx.constraintlayout.widget.ConstraintLayout>